<Window x:Class="Eindopdracht.View.EditCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eindopdracht.View"
        mc:Ignorable="d"
        Title="EditCategoryWindow" Height="211.813" Width="300"
        DataContext="{Binding UpdateCategory, Source={StaticResource Locator}}">
    <Border BorderThickness="12" Margin="0,0,0,76">
        <StackPanel Margin="0,0,0,-82">

            <TextBlock x:Name="txtTitel" HorizontalAlignment="Left" Margin="27,10,0,0" TextWrapping="Wrap" Text="Edit Category" VerticalAlignment="Top" FontSize="28"/>

            <TextBlock Text="Id:" Margin="0,5,0,0"  />
            <TextBox MaxLength="5" Text="{Binding Category.Id}" IsReadOnly="True" />

            <TextBlock Text="Name:" Margin="0,5,0,0"  />
            <TextBox Text="{Binding Category.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  />
            <Button x:Name="btnSave" Content="Save" Command="{Binding SaveCommand}" />

        </StackPanel>
    </Border>
</Window>
