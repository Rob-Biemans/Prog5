<Window x:Class="Eindopdracht.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eindopdracht"
        mc:Ignorable="d"
        Title="Ninjas" Height="350" Width="525">
    <Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="462" Height="238">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Binding="{Binding Id}" Foreground="#FF1D1616" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Foreground="#FF1D1616" />
                <DataGridTextColumn Header="Gold" Binding="{Binding Currency}" Foreground="#FF1D1616" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock x:Name="txtTitel" HorizontalAlignment="Left" Margin="10,12,0,0" TextWrapping="Wrap" Text="Ninja collection" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <Button x:Name="btnAdd" Content="+" HorizontalAlignment="Left" Margin="472,13,0,0" VerticalAlignment="Top" Width="30" Height="30"/>

    </Grid>
</Window>
